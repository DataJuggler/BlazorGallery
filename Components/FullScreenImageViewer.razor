@using BlazorStyled
@using ObjectLibrary.Enumerations

<Styled @bind-Classname=@ImageStyle>    
    width: @ScaledDownWidthStyle;
    max-height: @ImageHeightStyle;
    height: @ImageHeightStyle;    
    border: none;
    background-color: transparent;
    background-image: url(@ImageRelativePath);
    background-size: 100% 100%;
    position: fixed;
    left: 24vw;
    top: 8vh;
</Styled>
<Styled @bind-Classname="@CheckMarkContainerStyle">
    position: fixed;
    top: 14vh;
    float: left;
    height: 32px;
    min-height: 32px;
    width: 32px;
    left: 21.2%;
</Styled>
<Styled @bind-Classname="@CheckMarkStyle">
    width: 32px;
    height: 32px;
    min-height: 32px;
    position: relative;
    top: 0px;
    left: 0px;
    background-size: 100% 100%;
    background-image: url(@CheckMarkImage);
    z-index: 120;
</Styled>

<div class="col">   
    <button title="Go Back" class="backbutton" @onclick="GoBack"></button>    
    <button title="Copy direct link to this image" class="copybutton2" @onclick="CopyDirectLink"></button>    
    <img class="@ImageStyle" src="@ImageRelativePath">
    <div class="@CheckMarkContainerStyle">
        <div class="@CheckMarkStyle"></div>
    </div>
    @if ((ScreenType == ScreenTypeEnum.ViewImageInMainGallery) || (ScreenType == ScreenTypeEnum.ViewImage))
    {
        @if (CanMovePrevious)
        {
            <button title="View Previous Image In This Folder" class="backbutton2" @onclick="GoToPrevious"></button>
        }
        @if (CanMoveNext)
        {
            <button title="View Next Image In This Folder" class="forwardbutton" @onclick="GoToNext"></button>
        }
    }
</div>

